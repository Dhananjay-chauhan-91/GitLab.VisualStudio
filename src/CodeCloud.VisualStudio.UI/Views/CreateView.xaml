<shared:Dialog x:Class="CodeCloud.VisualStudio.UI.Views.CreateView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:shared="clr-namespace:CodeCloud.VisualStudio.Shared;assembly=CodeCloud.VisualStudio.Shared"
               xmlns:local="clr-namespace:CodeCloud.VisualStudio.UI.Views"
               xmlns:controls="clr-namespace:CodeCloud.VisualStudio.Shared.Controls;assembly=CodeCloud.VisualStudio.Shared"
               xmlns:vms="clr-namespace:CodeCloud.VisualStudio.UI.ViewModels"
               d:DataContext="{d:DesignInstance Type=vms:CreateViewModel, IsDesignTimeCreatable=False}"
               mc:Ignorable="d"
               Width="360">
    <controls:BusyIndicator IsBusy="{Binding IsBusy}"
                            BusyContent="{Binding BusyContent}">
        <Grid Margin="15">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="HorizontalAlignment"
                            Value="Right" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="15" />
                <RowDefinition Height="100" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>

            <Label Content="Name"
                   VerticalAlignment="Center" />
            <controls:IconedTextBox x:Name="UsernameTextBox"
                                    Grid.Column="1"
                                    Height="40"
                                    VerticalAlignment="Top"
                                    Wartermark="Name"
                                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Description"
                   Grid.Row="2" />
            <controls:IconedTextBox x:Name="PasswordTextBox"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    VerticalContentAlignment="Top"
                                    Wartermark="Awesome project(optional)"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto" />

            <Label Content="Git ignore"
                   Grid.Row="3" />
            <ComboBox x:Name="GitIgnoresComboBox"
                      Grid.Row="3"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding GitIgnores}"
                      DisplayMemberPath="Value"
                      SelectedValuePath="Key"
                      SelectedValue="{Binding SelectedGitIgnore}" />

            <Label Content="License"
                   Grid.Row="4" />
            <ComboBox x:Name="LicensesComboBox"
                      Grid.Row="4"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding Licenses}"
                      DisplayMemberPath="Value"
                      SelectedValuePath="Key"
                      SelectedValue="{Binding SelectedLicense}" />

            <Label Content="Property"
                   Grid.Row="5"
                   VerticalAlignment="Center" />
            <CheckBox Grid.Row="5"
                      Content="private?"
                      VerticalAlignment="Center"
                      IsChecked="{Binding IsPrivate}"
                      Grid.Column="1"
                      Margin="0,7" />

            <Label Content="Path"
                   Grid.Row="6"
                   VerticalAlignment="Center" />
            <DockPanel Grid.Row="6"
                       Grid.Column="1">
                <Button Content="Browse"
                        Width="60"
                        DockPanel.Dock="Right"
                        Command="{Binding BrowseCommand}" />
                <controls:IconedTextBox IsReadOnly="True"
                                        Text="{Binding Path}"
                                        VerticalContentAlignment="Center" />
            </DockPanel>

            <StackPanel Grid.Row="7"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,17,0,18">
                <Button Width="60"
                        Content="New"
                        Command="{Binding NewCommand}" />
                <Button Width="60"
                        Content="Cancel"
                        Margin="10,0,0,0"
                        Click="OnCancel" />
            </StackPanel>
        </Grid>
    </controls:BusyIndicator>
</shared:Dialog>
